UART_HandleTypeDef hMyUart;  // Deklarace handleru pro USART1
FIFO_t fifoTx;
FIFO_t fifoRx;
uint8_t rx_data;

//docasne
extern s_usarts_data_stm32f0xx_t usarts_data_stm32f0xx[UART_STM32F0XX_NO_OF_UARTS];

